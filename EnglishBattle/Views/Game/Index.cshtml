@model EnglishBattle.Models.GameViewModel
@{
    ViewBag.Title = "English Battle";
}
<p>Utilisateur : @Model.joueur.nom @Model.joueur.prenom</p>

<h1>Question @Model.numQuestion : le verbe @Model.verbe.baseVerbale ?</h1>


@using (Html.BeginForm("Index", "Game", FormMethod.Post,
new { @class = "form-horizontal", role = "form" }))
{
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.participe, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.participe, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.preterit, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.preterit, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Envoyer" />
        </div>
    </div>
    @*<div id="timer"></div>*@
    
}
